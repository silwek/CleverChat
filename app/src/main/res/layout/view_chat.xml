<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:name="com.silwek.cleverchat.ChatFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              app:layoutManager="LinearLayoutManager"
              tools:context="com.silwek.cleverchat.ui.activities.ChatRoomsActivity"
              tools:listitem="@layout/item_message">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/messagesList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/item_message"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_normal">

        <EditText
            android:id="@+id/fieldMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btSend"
            android:layout_width="@dimen/chat_send_button"
            android:layout_height="@dimen/chat_send_button"
            android:background="@null"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_send_24px"/>
    </LinearLayout>
</LinearLayout>